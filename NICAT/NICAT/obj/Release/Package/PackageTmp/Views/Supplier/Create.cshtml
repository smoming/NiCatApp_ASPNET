@model Supplier

@using (Ajax.BeginForm(new AjaxOptions()
{
    OnSuccess = "onSaved",
    Url = Url.Action("Add")
}))
{
    <div class="row">
        <div class="col-md-12">
            @Html.EditorForModel()
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.ButtonBuilder(ButtonType.submit, "btnSave", "儲存")
            @Html.ButtonBuilder(ButtonType.button, "btnCancel", "取消")
        </div>
    </div>
}

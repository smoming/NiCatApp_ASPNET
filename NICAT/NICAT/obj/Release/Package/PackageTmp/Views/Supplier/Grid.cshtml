@model IEnumerable<Supplier>

<div class="table-responsive">
    <table id="list" class="table table-bordered table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>代碼</th>
                <th>名稱</th>
                <th>國家</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var it in Model)
            {
                <tr class="alert-info">
                    <td>@Html.DisplayFor(m => it.ID)</td>
                    <td>@Html.DisplayFor(m => it.Name)</td>
                    <td>@Html.DisplayFor(m => it.Nation.Name)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
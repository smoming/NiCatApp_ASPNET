@model Shipper

<div class="col-md-4">
    @Html.TextBoxBuilder(m => m.TransNo, "出貨編號")
    @Html.DateBoxBuilder(m => m.TradeDate, "出貨日期")
    @Html.TextBoxBuilder(m => m.Buyer, "買家")
    
</div>
<div class="col-md-4">
    @Html.NumberBoxBuilder(m => m.TradeAmount, "金額")
    @Html.DropDownListBuilder(m => m.Delivery, Shared.DeliveryTypeList(), "配送方式")
    @Html.NumberBoxBuilder(m => m.Fee, "運費")
</div>
<div class="col-md-4">
    @Html.TextAreaBuilder(m => m.Remark, "備註")
</div>

<style>
    #Remark {
        resize: vertical;
    }
</style>
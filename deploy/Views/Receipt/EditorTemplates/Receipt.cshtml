@model Receipt

<div class="row">
    <div class="col-md-6">
        @Html.TextBoxBuilder(m => m.TransNo, "付款編號")
        @Html.DateBoxBuilder(m => m.TradeDate, "付款日期")
    </div>
    <div class="col-md-6">
        @Html.NumberBoxBuilder(m => m.TradeAmount, "金額")
        @Html.TextAreaBuilder(m => m.Remark, "備註")
    </div>
</div>

<style>
    #Remark {
        resize: vertical;
    }
</style>